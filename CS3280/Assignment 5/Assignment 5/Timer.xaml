<UserControl x:Class="Assignment_5.Timer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Assignment_5"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="200">
    <Grid>
        <Border Grid.Column="1" Grid.Row="1" Background="Tan" CornerRadius="15" Margin="10">
            <Label x:Name="lblTimer" VerticalAlignment="Center" HorizontalAlignment="Center" Content="00:00" FontSize="24" />
        </Border>
    </Grid>
</UserControl>
